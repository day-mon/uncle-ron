#!/bin/bash

qif ! command -v pre-commit &> /dev/null; then
    echo "pre-commit is not installed. Please install it with 'pip install pre-commit'"
    exit 0
fi

if [ ! -f .git/hooks/pre-commit ] || [ ! -x .git/hooks/pre-commit ]; then
    echo "Installing pre-commit hooks..."
    pre-commit install
    echo "Pre-commit hooks installed successfully!"
fi